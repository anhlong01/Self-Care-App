<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bind="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">
            <TextView
                android:id="@+id/ticketId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mã phiếu khám"
                android:textSize="20dp"/>
            <TextView
                android:id="@+id/ticketDoctor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bác sĩ"
                android:textSize="20dp"/>
            <TextView
                android:id="@+id/ticketTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giờ khám"
                android:textSize="20dp"/>
            <TextView
                android:id="@+id/ticketPatient"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bệnh nhân"
                android:textSize="20dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:layout_marginTop="10dp"
                    android:id="@+id/diagnoseBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gửi chẩn đoán"/>
                <Button
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/reDiagnoseBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hẹn khám lại"/>
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>




</layout>